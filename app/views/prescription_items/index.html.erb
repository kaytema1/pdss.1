<h1>Listing prescription_items</h1>

<table>
  <thead>
    <tr>
      <th>Drug name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Drug form</th>
      <th>Prescription</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prescription_items.each do |prescription_item| %>
      <tr>
        <td><%= prescription_item.drug_name %></td>
        <td><%= prescription_item.quantity %></td>
        <td><%= prescription_item.price %></td>
        <td><%= prescription_item.drug_form %></td>
        <td><%= prescription_item.prescription %></td>
        <td><%= link_to 'Show', prescription_item %></td>
        <td><%= link_to 'Edit', edit_prescription_item_path(prescription_item) %></td>
        <td><%= link_to 'Destroy', prescription_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

