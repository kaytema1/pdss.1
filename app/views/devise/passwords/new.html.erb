<%= image_tag "ghs.jpg", :class => "text_center logo_image" %>
<h2 class="text_center">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<div class="text_center">
  <%= devise_error_messages! %>

  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label text_center">
    <%= f.label :email, :class => "mdl-textfield__label" %><br />
    <%= f.email_field :email, autofocus: true, :class => "mdl-textfield__input" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", :class => "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
  </div>
<% end %>
<br />
<%= render "devise/shared/links" %>
</div>
